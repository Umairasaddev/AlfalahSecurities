<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingTop="@dimen/_20sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="@dimen/_200sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <RelativeLayout
        android:id="@+id/linearLayout8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="26dp"
        android:paddingTop="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/login_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textfield_white_border"
            android:ems="10"
            android:gravity="center"
            android:hint="username"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/colorTextHint" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/textfield_white_border"
            android:ems="10"
            android:gravity="center"
            android:hint="password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/tv_forgotPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_pass"
            android:layout_alignEnd="@+id/login_pass"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:text="Forgot Password?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forgotPwd"
            android:layout_alignStart="@+id/login_pass"
            android:layout_alignEnd="@+id/login_pass"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_button"
            android:ems="10"
            android:text="Login"
            android:textColor="@android:color/white" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
