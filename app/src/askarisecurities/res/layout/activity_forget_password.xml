<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ForgetPasswordActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/pointer" />

<!--    <ImageView-->
<!--        android:id="@+id/imageView6"-->
<!--        android:layout_width="@dimen/_222sdp"-->
<!--        android:layout_height="@dimen/_28sdp"-->
<!--        android:layout_below="@id/imageView5"-->
<!--        android:layout_centerHorizontal="true" />-->

    <RelativeLayout
        android:id="@+id/linearLayout8"
        android:layout_width="@dimen/_256sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_18sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="Enter your details"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/slice_color_3"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDetails"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_credentials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/slice_color_3"
                android:textSize="@dimen/_17sdp" />

            <EditText
                android:id="@+id/useridField"
                android:layout_width="@dimen/_213sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/slice_color_3"
                android:gravity="center"
                android:hint="Client ID"
                android:imeOptions="actionSend"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/emailField"
                android:layout_width="@dimen/_213sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/slice_color_3"
                android:ems="10"
                android:gravity="center"
                android:hint="Email"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />


            <Button
                android:id="@+id/forgetBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/bg_button"
                android:text="Send New Password"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>

<!--    <TextView-->
<!--        android:id="@+id/tv_Trust"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_above="@+id/llBottom"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="@dimen/_25sdp"-->
<!--        android:layout_marginBottom="@dimen/_40sdp"-->
<!--        android:text="Your Trust, Our Strength"-->
<!--        android:textAppearance="?android:attr/textAppearanceSmall"-->
<!--        android:textColor="@color/slice_color_3"-->
<!--        android:textSize="@dimen/_14sdp" />-->

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_4sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 3.1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/slice_color_3"
            android:textSize="@dimen/_10sdp" />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="@dimen/_5sdp"-->
