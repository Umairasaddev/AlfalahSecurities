<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_bg"
    tools:context=".ForgetPasswordActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/_191sdp"
        android:layout_height="@dimen/_105sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bipl_logo"
        android:visibility="invisible" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/imageView6"
        android:layout_width="@dimen/_222sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_below="@id/imageView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bipl_logo_text" />

    <RelativeLayout
        android:id="@+id/linearLayout8"
        android:layout_width="@dimen/_256sdp"
        android:layout_height="@dimen/_230sdp"
        android:layout_below="@id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/grey_box"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_credentials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Sign Up"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp" />

        <EditText
            android:id="@+id/field_firstname"
            android:layout_width="@dimen/_213sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_below="@+id/tv_credentials"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/input_fields"
            android:gravity="center"
            android:hint="Name"
            android:imeOptions="actionSend"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <EditText
            android:id="@+id/field_phoneno"
            android:layout_width="@dimen/_213sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_below="@+id/field_firstname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/input_fields"
            android:gravity="center"
            android:hint="Contact #"
            android:imeOptions="actionSend"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <EditText
            android:id="@+id/field_email"
            android:layout_width="@dimen/_213sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_below="@+id/field_phoneno"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/input_fields"
            android:gravity="center"
            android:hint="Email"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />


        <Button
            android:id="@+id/signupButton"
            fontPath="fonts/Helvetica Bold.ttf"
            android:layout_width="@dimen/_98sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_below="@+id/field_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/blue_btn"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_Trust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_below="@+id/linearLayout8"
        android:layout_centerHorizontal="true"
        android:text="Your Trust, Our Strength"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 3.0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.bipldirect.com"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>
