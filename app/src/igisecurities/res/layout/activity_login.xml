<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/pointer" />

    <RelativeLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:padding="10dp">


        <EditText
            android:id="@+id/login_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textfield_login"
            android:ems="13"
            android:gravity="center"
            android:hint="USERNAME"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textfield_login"
            android:ems="13"
            android:gravity="center"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />


        <TextView
            android:id="@+id/tv_forgotPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_pass"
            android:layout_alignRight="@+id/login_pass"
            android:layout_below="@+id/login_pass"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/forgotPassword"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0076AD"
            android:textColorLink="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_pass"
            android:layout_alignRight="@+id/login_pass"
            android:layout_below="@+id/tv_forgotPwd"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/call"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textColorLink="@color/colorPrimaryDark"
            android:visibility="gone" />


        <Button
            android:id="@+id/login_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone"
            android:layout_alignStart="@+id/login_pass"
            android:layout_alignLeft="@+id/login_pass"
            android:layout_alignEnd="@+id/login_pass"
            android:layout_alignRight="@+id/login_pass"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_igisec"
            android:ems="6"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/login_registerme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_btn"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_zafarsec"
            android:ems="6"
            android:visibility="gone"
            android:text="Register Me"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:layout_alignRight="@+id/login_pass"
            android:layout_alignEnd="@+id/login_pass"
            android:layout_alignLeft="@+id/login_pass"
            android:layout_alignStart="@+id/login_pass" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/link"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/thinkStupid"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/link"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textColorLink="@color/colorPrimaryDark"
        android:visibility="gone" />


    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Version 2.0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColorLink="@color/colorPrimaryDark" />
</RelativeLayout>
