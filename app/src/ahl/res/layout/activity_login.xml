<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bg"
    tools:context=".ForgetPasswordActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/login_logo"
        android:id="@+id/imageView5"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/_222sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_below="@id/imageView5"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bipl_logo_text" />

    <RelativeLayout
        android:id="@+id/linearLayout8"
        android:layout_width="@dimen/_256sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_18sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/helveticaneue"
            android:gravity="center"
            android:text="Enter Your Credentials"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDetails"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_name"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/edittext_shape"
                android:gravity="center"
                android:hint="Username"
                android:imeOptions="actionSend"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/login_pass"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/helveticaneue"
                android:ems="10"
                android:background="@drawable/edittext_shape"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tv_forgotPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_pass"
                android:layout_alignEnd="@+id/login_pass"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:text="Forgot Password?"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap 'Login' to accept the"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AHL TRADE ACCOUNT"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms of Service and Privacy Policy"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/login_btn"
                android:fontFamily="@font/helvetica_bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Login"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_Trust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:text="Your Trust, Our Strength"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/_14sdp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_4sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/_10sdp"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="www.bipldirect.com"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/_10sdp"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>
