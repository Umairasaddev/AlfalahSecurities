<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/login_logo"
        android:id="@+id/login_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Credentials"
        app:layout_constraintTop_toBottomOf="@+id/login_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvEnterYourCredentials"
        android:fontFamily="@font/helveticaneue"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30dp" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext_shape"
        android:layout_marginTop="10dp"
        android:id="@+id/login_name"
        android:hint="Username"
        android:fontFamily="@font/helveticaneue"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:textAllCaps="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEnterYourCredentials"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext_shape"
        android:layout_marginTop="10dp"
        android:id="@+id/login_pass"
        android:hint="Password"
        android:fontFamily="@font/helveticaneue"
        android:inputType="textPassword"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_name"
        />

            <TextView
                android:id="@+id/tv_forgotPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintRight_toRightOf="@+id/login_pass"
                app:layout_constraintTop_toBottomOf="@+id/login_pass"
                android:text="Forgot Password?"
                android:fontFamily="@font/helveticaneue"
                android:textAppearance="?android:attr/textAppearanceSmall" />


    <TextView
        android:id="@+id/tvTapToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="12dp"
        android:fontFamily="@font/helveticaneue"
        app:layout_constraintLeft_toLeftOf="@+id/login_pass"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgotPwd"
        android:text="Tap 'Login' to accept the"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvAHLIslamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/helveticaneue"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp"
        app:layout_constraintRight_toRightOf="@id/login_pass"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgotPwd"
        app:layout_constraintLeft_toRightOf="@+id/tvTapToLogin"
        android:text=" AHL TRADE ACCOUNT"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <TextView
        android:id="@+id/tvTermsServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/helveticaneue"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAHLIslamic"
        android:text="Terms of Service and Privacy Policy"
        android:textAppearance="?android:attr/textAppearanceSmall" />


            <Button
                android:id="@+id/login_btn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_shape"
                android:textAllCaps="false"
                android:fontFamily="@font/helveticaneue"
                app:layout_constraintTop_toBottomOf="@+id/tvTermsServices"
                android:ems="10"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Login"
                android:textColor="@android:color/white" />


</android.support.constraint.ConstraintLayout>
