<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bg"
    tools:context=".ForgetPasswordActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/login_logo"
        android:id="@+id/imageView5"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/_222sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_below="@id/imageView5"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bipl_logo_text" />

    <RelativeLayout
        android:id="@+id/linearLayout8"
        android:layout_width="@dimen/_256sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_18sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="Enter your details"
            android:fontFamily="@font/helveticaneue"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDetails"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_credentials"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/_17sdp" />

            <EditText
                android:id="@+id/useridField"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/edittext_shape"
                android:gravity="center"
                android:hint="Client ID"
                android:imeOptions="actionSend"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/emailField"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/helveticaneue"
                android:ems="10"
                android:background="@drawable/edittext_shape"
                android:gravity="center"
                android:hint="Email"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/_14sdp" />

            <Button
                android:id="@+id/forgetBtn"
                android:fontFamily="@font/helvetica_bold"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="Send New Password"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_Trust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/_40sdp"
        android:text="Your Trust, Our Strength"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_4sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 2.8"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="www.bipldirect.com"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

</RelativeLayout>
